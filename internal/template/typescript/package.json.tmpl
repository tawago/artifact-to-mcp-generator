{
  "name": "{{ .Metadata.Name | lower | replace " " "-" }}-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for {{ .Metadata.Name }} smart contract",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc -w",
    "test:install": "npx playwright install --with-deps chromium",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headless": "HEADLESS=true playwright test --reporter=list",
    "test:report": "npx playwright show-report"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "ethers": "^6.7.1",
    "zod": "^3.22.2",
    "zod-to-json-schema": "^3.21.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.10.2",
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.30",
    "typescript": "^5.8.3"
  }
}